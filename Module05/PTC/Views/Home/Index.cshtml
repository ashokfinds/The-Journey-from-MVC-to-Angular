@{
  ViewBag.Title = "Paul's Training Company";
}


    <!-- ** BEGIN ng-app **-->
    <div ng-app="app" ng-controller="ProductController as vm">        
        <form name="productForm" novalidate>
            <!-- ** BEGIN MESSAGE AREA ** -->
            <div class="row" ng-hide="vm.uiState.isValid || (productForm.$valid && !productForm.$pristine)">
                <div class="col-xs-12">
                    <div class="alert alert-danger alert-dismissable" role="alert">
                        <button type="button" class="close"
                                data-dismiss="alert">
                            <span aria-hidden="true">
                                &times;
                            </span>
                            <span class="sr-only">Close</span>
                        </button>
                        <ul>
                            <li ng-repeat="message in vm.uiState.messages">
                                {{message.message}}
                            </li>
                            <li ng-show="productForm.productName.$error.required">
                                Product Name must be filled in.
                            </li>
                            <li ng-show="!productForm.productName.$valid">
                                Product Name must be between 4 and 150 characters.
                            </li>
                            <li ng-show="productForm.introductionDate.$error.required">
                                Introduction Date must be filled in.
                            </li>
                            <li ng-show="productForm.productUrl.$error.required">
                                Url must be filled in.
                            </li>
                            <li ng-show="productForm.productPrice.$error.required">
                                Price must be filled in.
                            </li>
                            <li ng-show="!productForm.productPrice.$valid">
                                Price must be between 0.01 and 9999.99.
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <!-- ** END MESSAGE AREA ** -->
            <!-- ** BEGIN SEARCH AREA ** -->
            <div class="panel panel-primary" ng-show="vm.uiState.isSearchAreaVisible">
                <div class="panel-heading">
                    <h1 class="panel-title">Search for Products</h1>
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <label for="searchCategoryId">Select a Product Category</label>
                        <select id="searchCategoryId" class="form-control"
                                ng-model="vm.searchInput.selectedCategory"
                                ng-options="item.CategoryName
                                        for item in vm.searchCategories
                                        track by item.CategoryId"></select>
                    </div>
                    <div class="form-group">
                        <label for="searchProductName">Product Name</label>
                        <input id="searchProductName" type="text" class="form-control"
                               ng-model="vm.searchInput.productName" />
                    </div>
                </div>
                <div class="panel-footer">
                    <a class="btn btn-sm btn-primary"
                       ng-click="vm.search()">
                        <i class="glyphicon glyphicon-search"></i>
                        &nbsp;Search
                    </a>
                    <a class="btn btn-sm btn-primary"
                       ng-click="vm.resetSearch()">
                        <i class="glyphicon glyphicon-share-alt"></i>
                        &nbsp;Reset
                    </a>
                    <a class="btn btn-sm btn-success" ng-click="vm.addClick()">
                        <i class="glyphicon glyphicon-plus"></i>
                        &nbsp;Add
                    </a>
                </div>
            </div>
            <!-- ** END SEARCH AREA ** -->
            <!-- ** BEGIN DETAIL AREA ** -->
            <div class="panel panel-primary" ng-show="vm.uiState.isDetailAreaVisible">
                <div class="panel-heading">
                    <h1 class="panel-title">
                        Product Information
                    </h1>
                </div>
                <div class="panel-body">
                    <!-- ** BEGIN INPUT AREA -->
                    <div class="form-group">
                        <label for="categoryId">Product Category</label>
                        <select id="categoryId" name="categoryId" class="form-control" ng-model="vm.product.Category"
                                ng-options="item.CategoryName
                                        for item in vm.categories
                                        track by item.CategoryId"></select>
                    </div>
                    <div class="form-group">
                        <label for="productName">Product Name</label>
                        <input type="text" id="productName" name="productName" class="form-control" ng-model="vm.product.ProductName"
                               required ng-minlength="4" ng-maxlength="150" />
                    </div>
                    <div class="form-group">
                        <label for="introductionDate">Introduction Date</label>
                        <input type="text" id="introductionDate" name="introductionDate" class="form-control" ng-model="vm.product.IntroductionDate"
                               required />
                    </div>
                    <div class="form-group">
                        <label for="productUrl">URL</label>
                        <input type="text" id="productUrl" name="productUrl" class="form-control" ng-model="vm.product.Url"
                               required />
                    </div>
                    <div class="form-group">
                        <label for="productPrice">Price</label>
                        <input type="number" id="productPrice" name="productPrice" class="form-control" ng-model="vm.product.Price"
                               required min="0.01" max="9999.99" />
                    </div>
                    <!-- ** END INPUT AREA -->
                </div>
                <div class="panel-footer">
                    <div class="row">
                        <div class="col-sm-12">
                            <a class="btn btn-sm btn-primary" ng-click="vm.saveClick(productForm)">
                                <i class="glyphicon glyphicon-floppy-disk"></i>
                                &nbsp;Save
                            </a>
                            <a class="btn btn-sm btn-primary" ng-click="vm.cancelClick(productForm)">
                                <i class="glyphicon glyphicon-remove-circle"></i>
                                &nbsp;Cancel
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- ** END DETAIL AREA ** -->
            <!-- ** BEGIN LIST AREA ** -->
            <div class="table-responsive" ng-show="vm.uiState.isListAreaVisible">
                <table id="productTable"
                       class="table table-condensed table-bordered table-striped table-hover">
                    <thead>
                        <tr>
                            <th class="pdsa-action-button-column">
                                Edit
                            </th>
                            <th>Product Name</th>
                            <th>Introduction Date</th>
                            <th>Url</th>
                            <th>Price</th>
                            <th class="pdsa-action-button-column">
                                Delete
                            </th>
                        </tr>
                    </thead>

                    <tbody>
                        <tr ng-repeat="product in vm.products | filter: vm.searchImmediate">
                            <td class="pdsa-action-button-column">
                                <a href="#"
                                   ng-click="vm.editClick(product.ProductId)"
                                   class="btn btn-default btn-sm">
                                    <i class="glyphicon glyphicon-edit"></i>
                                </a>
                            </td>
                            <td>{{product.ProductName}}</td>
                            <td>{{product.IntroductionDate | date: 'MM/dd/yyyy'}}</td>
                            <td>{{product.Url}}</td>
                            <td>{{product.Price | currency: "€"}}</td>
                            <td class="pdsa-action-button-column">
                                <a href="#"
                                   ng-click="vm.deleteClick(product.ProductId)"
                                   class="btn btn-default btn-sm">
                                    <i class="glyphicon glyphicon-trash"></i>
                                </a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <!-- ** END LIST AREA ** -->
        </form>
    </div>
    <!-- ** END ng-app **-->

@section scripts {  
  <script src="~/app/app.module.js"></script>
  <script src="~/app/product.controller.js"></script>
}